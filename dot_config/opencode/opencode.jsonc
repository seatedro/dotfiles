{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["amazon-bedrock"],
  "agent": {
    "write": {
      "mode": "primary",
      "model": "anthropic/claude-opus-4-5",
      "permission": {
        "edit": "ask",
        "bash": {
          "rg *": "allow",
          "grep *": "allow",
          "fd *": "allow",
          "find *": "allow",
          "git log": "allow",
          "git status": "allow",
          "*": "ask"
        }
      },
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
  },
  "mcp": {
